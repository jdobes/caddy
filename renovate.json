{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["Containerfile"],
      "matchStrings": ["--with (?<depName>[^@]+)@(?<currentValue>[^\\s\\\\]+)"],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchCategories": ["docker", "ci", "custom"],
      "groupName": "references",
      "groupSlug": "references",
      "pinDigests": true,
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "pr"
    }
  ]
}
